public void  bubble-sort(arr){
	for(int i = 0; i < n; i++)
	{
		for(int j = 0; j < n-i; j++)			
		{
			if(a[j] > a[j + 1])
			{
				int temp = arr[j];
				arr[j] = arr[j + 1];
				arr[j + 1 ] = temp;		
			}
		}
	}
}


